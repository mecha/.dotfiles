#! /bin/env bash

function usage() {
    self=$(basename "$0")
    echo "Tmux project sessionizer. Create a session at a specific path, or switch to the session if it already exists."
    echo "  Miguel Muscat - 2023"
    echo "  Adapted from ThePrimegen's script: https://github.com/ThePrimeagen/.dotfiles/blob/master/bin/.local/scripts/tmux-sessionizer"
    echo ""
    echo "Usage:"
    echo "  $self [PATH]"
    echo ""
    echo "Arguments:"
    echo "  PATH   The path to the directory."
}

if [[ $1 == "--help" || -z "$1" ]]; then
    usage
    exit 0
fi

path=$1
path_name=$(basename "$path" | tr . _)

tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
    tmux new-session -s $path_name -c $path
    exit 0
fi

if ! tmux has-session -t=$path_name 2> /dev/null; then
    tmux new-session -ds $path_name -c $path
fi

tmux switch-client -t $path_name
